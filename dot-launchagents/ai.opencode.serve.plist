<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>Label</key>
    <string>ai.opencode.serve</string>

    <key>ProgramArguments</key>
    <array>
        <string>/opt/homebrew/bin/opencode</string>
        <string>serve</string>
    </array>

    <key>EnvironmentVariables</key>
    <dict>
        <key>AWS_PROFILE</key>
        <string>claude-code</string>
        <key>AWS_DEFAULT_REGION</key>
        <string>eu-central-1</string>
        <key>HOME</key>
        <string>__HOME__</string>
        <key>PATH</key>
        <string>/opt/homebrew/bin:/usr/local/bin:/usr/bin:/bin:/usr/sbin:/sbin</string>
    </dict>

    <!-- Start on login -->
    <key>RunAtLoad</key>
    <true/>

    <!-- Keep it running -->
    <key>KeepAlive</key>
    <true/>

    <!-- Logs for debugging -->
    <key>StandardOutPath</key>
    <string>__HOME__/.local/share/opencode/serve.log</string>
    <key>StandardErrorPath</key>
    <string>__HOME__/.local/share/opencode/serve.error.log</string>

    <!-- Working directory -->
    <key>WorkingDirectory</key>
    <string>__HOME__</string>
</dict>
</plist>
