{
  "$schema": "https://opencode.ai/config.json",
  "theme": "ayu",
  "autoshare": false,
  "autoupdate": true,
  "provider": {
    "openrouter": {
      "npm": "@openrouter/ai-sdk-provider",
      "models": {
        "anthropic/claude-3.5-sonnet": {
          "name": "Claude 3.5 Sonnet (OpenRouter)"
        },
        "anthropic/claude-3.5-haiku": {
          "name": "Claude 3.5 Haiku (OpenRouter)"
        },
        "openai/gpt-4o": {
          "name": "GPT-4o (OpenRouter)"
        },
        "google/gemini-pro-1.5": {
          "name": "Gemini Pro 1.5 (OpenRouter)"
        }
      }
    },
    "ollama": {
      "npm": "@ai-sdk/openai-compatible",
      "options": {
        "baseURL": "http://localhost:11434/v1"
      },
      "models": {
        "llava-llama3": {
          "name": "LLaVA Llama 3 (Local)"
        },
        "qwen2.5": {
          "name": "Qwen 2.5 (Local)"
        },
        "deepseek-r1": {
          "name": "DeepSeek R1 (Local)"
        },
        "llama3.2": {
          "name": "Llama 3.2 (Local)"
        }
      }
    }
  },
  "mcp": {
    "docker-mcp": {
      "type": "local",
      "command": ["docker", "run", "-i", "--rm", "alpine/socat", "STDIO", "TCP:host.docker.internal:8811"],
      "environment": {}
    },
    "snap-happy": {
      "type": "local",
      "command": ["npx", "@mariozechner/snap-happy"],
      "environment": {
        "SNAP_HAPPY_SCREENSHOT_PATH": "${HOME}/Screenshots"
      }
    }
  }
}
