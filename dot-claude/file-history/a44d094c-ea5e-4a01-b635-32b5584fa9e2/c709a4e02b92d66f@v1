{{- end }}

{{/*
Create the name of the agent gateway service account to use
*/}}
{{- define "apa.agentGateway.serviceAccountName" -}}
{{- if .Values.agentGateway.serviceAccount.create }}
{{- default (printf "%s-%s" (include "apa.fullname" .) "agent-gateway") .Values.agentGateway.serviceAccount.name }}
{{- else }}
{{- default "default" .Values.agentGateway.serviceAccount.name }}
{{- end }}
{{- end }}

{{/*
Agent Gateway fullname
*/}}
{{- define "apa.agentGateway.fullname" -}}
{{ include "apa.fullname" . }}-ag
{{- end }}

{{- define "apa.agentGateway.url" -}}
http://{{ include "apa.agentGateway.fullname" . }}:8080
{{- end }}