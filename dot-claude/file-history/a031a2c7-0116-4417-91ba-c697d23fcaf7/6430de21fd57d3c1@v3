# Development environment values for Kiali
# Overrides default-values.yaml for development-specific configurations

kiali-server:
  deployment:
    # Single replica for dev
    replicas: 1

    # Lower resources for development
    resources:
      requests:
        cpu: 50m
        memory: 128Mi
      limits:
        cpu: 500m
        memory: 256Mi

    # Debug logging for development
    logger:
      log_level: debug

  # External services - dev environment
  external_services:
    # Prometheus in dev (update based on your setup)
    prometheus:
      # If you don't have Prometheus yet, Kiali will still work
      # but won't show metrics
      url: "http://prometheus-kube-prometheus-prometheus.monitoring.svc.cluster.local:9090/"

    # Grafana integration disabled for now
    grafana:
      enabled: false

    # Tracing disabled for now
    tracing:
      enabled: false

  # Authentication - simple token for dev
  auth:
    strategy: "token"

  # Development login token (16 bytes)
  login_token:
    signing_key: "sixteen-byte-key"

  # UI defaults for dev
  kiali_feature_flags:
    ui_defaults:
      # Show all AICC namespaces by default
      namespaces:
        - fiber-magenta-apprentice
        - istio-system
        - istio-ingress
      # Faster refresh for development
      refresh_interval: "15s"
