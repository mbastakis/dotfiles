# ---- Base Stage ----
# Use node:22-alpine as the base image
FROM node:22-alpine AS base
WORKDIR /app

# Copy package.json and package-lock.json (or npm-shrinkwrap.json, yarn.lock)
# Ensure there's a .dockerignore in the frontend directory that excludes node_modules
COPY package*.json ./

# Install dependencies
RUN npm install

# ---- Development Stage ----
FROM base AS development
WORKDIR /app

# Copy the rest of the application code
# This assumes .dockerignore is properly set up in the context (./frontend)
COPY . .

# Expose port 3000 for Vite dev server
EXPOSE 3000

# Command to run the development server on port 3000 and accessible externally
CMD ["npm", "run", "dev", "--", "--host", "--port=3000"]

# ---- Production Build Stage ----
FROM base AS builder
WORKDIR /app

# Copy the rest of the application code
COPY . .

# Use a placeholder for the backend URL that will be replaced at runtime
ENV VITE_BACKEND_URL=__VITE_BACKEND_URL_PLACEHOLDER__

# Build the application
# The 'build' script is "tsc -b && vite build" from package.json
RUN npm run build

# ---- Production Stage ----
# Use nginx to serve the static files
FROM nginx:alpine AS production

# Create app directory and ensure /tmp is writable
RUN mkdir -p /app/html && \
    chown -R 65534:65534 /app /tmp && \
    chmod -R 755 /app

# Copy built assets from the builder stage to /app/html (will be copied to /tmp/html at runtime)
COPY --from=builder /app/dist /app/html

# Change ownership to UID 65534 (nobody) to match Kubernetes security context
RUN chown -R 65534:65534 /app/html && chmod -R 755 /app/html

# Copy nginx config and entrypoint script
COPY nginx-non-root.conf /etc/nginx/nginx.conf
COPY docker-entrypoint.sh /docker-entrypoint.sh
RUN chmod +x /docker-entrypoint.sh

# Expose port 8080
EXPOSE 8080

# Run as UID 65534 (nobody) - matches Kubernetes securityContext
USER 65534

# Use entrypoint to replace placeholders at runtime
ENTRYPOINT ["/docker-entrypoint.sh"]