# ---- Base Stage ----
# Use node:22-alpine as the base image
FROM node:22-alpine AS base
WORKDIR /app

# Copy package.json and package-lock.json (or npm-shrinkwrap.json, yarn.lock)
# Ensure there's a .dockerignore in the frontend directory that excludes node_modules
COPY package*.json ./

# Install dependencies
RUN npm install

# ---- Development Stage ----
FROM base AS development
WORKDIR /app

# Copy the rest of the application code
# This assumes .dockerignore is properly set up in the context (./frontend)
COPY . .

# Expose port 3000 for Vite dev server
EXPOSE 3000

# Command to run the development server on port 3000 and accessible externally
CMD ["npm", "run", "dev", "--", "--host", "--port=3000"]

# ---- Production Build Stage ----
FROM base AS builder
WORKDIR /app

# Copy the rest of the application code
COPY . .

# Build the application
# The 'build' script is "tsc -b && vite build" from package.json
RUN npm run build

# ---- Production Stage ----
# Use nginx to serve the static files
FROM nginx:alpine AS production

# Copy built assets from the builder stage to nginx html directory
COPY --from=builder /app/dist /usr/share/nginx/html

# Copy nginx configuration if needed
# COPY nginx.conf /etc/nginx/nginx.conf

# Expose port 8080 (nginx default is 80, but we'll configure it for 8080)
EXPOSE 8080

# Create a custom nginx config to listen on port 8080
RUN echo 'server { \
    listen 8080; \
    server_name localhost; \
    location / { \
        root /usr/share/nginx/html; \
        index index.html; \
        try_files $uri $uri/ /index.html; \
    } \
}' > /etc/nginx/conf.d/default.conf

# Start nginx
CMD ["nginx", "-g", "daemon off;"]