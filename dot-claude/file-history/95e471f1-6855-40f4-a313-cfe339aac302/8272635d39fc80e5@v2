            {{- toYaml . | nindent 12 }}
          {{- end }}
          {{- with .Values.evaluator.args }}
          args:
            {{- toYaml . | nindent 12 }}
          {{- end }}
          env:
            {{- range $key, $value := .Values.evaluator.env }}
            - name: {{ $key }}
              value: {{ $value | quote }}
            {{- end }}
          {{- with .Values.evaluator.envFrom }}
          envFrom:
            {{- toYaml . | nindent 12 }}
          {{- end }}
          resources:
            {{- toYaml .Values.evaluator.resources | nindent 12 }}
          {{- with .Values.evaluator.volumeMounts }}
          volumeMounts:
            {{- toYaml . | nindent 12 }}
          {{- end }}
      {{- with .Values.evaluator.volumes }}
      volumes:
        {{- toYaml . | nindent 8 }}
      {{- end }}
