{
  "safety": {
    "require_confirmation": [
      "rm -rf",
      "rm -R", 
      "rm -r",
      "sudo rm",
      "git push --force",
      "git push -f",
      "git push origin +",
      "git reset --hard",
      "git clean -fd",
      "chmod -R 777",
      "chmod 777",
      "dd if=",
      "mkfs",
      "format",
      "del /s /q",
      "rmdir /s",
      "npm uninstall -g",
      "pip uninstall",
      "docker system prune",
      "docker rm",
      "docker rmi",
      "systemctl stop",
      "systemctl disable",
      "kill -9",
      "killall",
      "reboot",
      "shutdown",
      "mv * ",
      "cp -r / ",
      "rsync --delete"
    ],
    "high_risk_patterns": [
      ".*\\*.*rm.*",
      ".*sudo.*rm.*",
      ".*git.*force.*",
      ".*chmod.*777.*",
      ".*>/dev/null.*rm.*"
    ]
  },
  "automation": {
    "auto_confirm_safe_operations": true,
    "auto_save_changes": true,
    "skip_routine_confirmations": true
  },
  "permissions": {
    "allow": [
      "Write",
      "MultiEdit",
      "Edit",
      "Bash",
      "Bash(brew search:*)",
      "Bash(npm run compile:*)",
      "Bash(find:*)",
      "Bash(grep:*)",
      "WebFetch(domain:code.visualstudio.com)",
      "WebFetch(domain:opencode.ai)",
      "WebFetch(domain:github.com)",
      "WebFetch(domain:docs.anthropic.com)",
      "WebFetch(domain:docs.anthropic.com)",
      "WebFetch(domain:ghostty.org)",
      "mcp__socat-docker__search_code",
      "mcp__socat-docker__list_directory",
      "mcp__snap-happy__ListWindows",
      "mcp__snap-happy__TakeScreenshot",
      "mcp__context7__resolve-library-id",
      "mcp__context7__get-library-docs"
    ],
    "deny": []
  },
  "display": {
    "show_command_preview": true,
    "verbose_output": true,
    "show_execution_details": true
  }
}
