{
  "$schema": "https://opencode.ai/config.json",
  "theme": "system",
  "autoshare": false,
  "share": "manual",
  "autoupdate": true,
  "mcp": {
    "snap-happy": {
      "type": "local",
      "command": ["npx", "@mariozechner/snap-happy"],
      "environment": {
        "SNAP_HAPPY_SCREENSHOT_PATH": "${HOME}/Screenshots"
      }
    },
    "context7": {
      "type": "local",
      "command": ["npx", "-y", "@upstash/context7-mcp"]
    },
    "mcp-obsidian": {
      "type": "local",
      "command": ["uvx", "mcp-obsidian"],
      "environment": {
        "OBSIDIAN_API_KEY": "fc66e63d54ee9f23e95b48ef533c62910d388af3db4408b76da25f0129beffeb",
        "OBSIDIAN_HOST": "127.0.0.1",
        "OBSIDIAN_PORT": "27124"
      }
    },
    "firecrawl-mcp": {
      "type": "local",
      "command": ["npx", "-y", "firecrawl-mcp"],
      "environment": {
        "FIRECRAWL_API_KEY": "fc-8387be82dcd54262994da6c21442e473"
      }
    },
    "sequential-thinking": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@modelcontextprotocol/server-sequential-thinking"
      ]
    }
  },
  "permission": {
    "edit": "allow",
    "bash": {
      "cat ~/.config/opencode/*": "allow",
      "ls ~/.config/opencode/*": "allow",
      "find ~/.config/opencode -name '*.md'": "allow",
      "~/.config/opencode/cache/cache-helper.sh *": "allow",
      "~/.config/opencode/logs/session-logger.sh *": "allow",
      "mkdir -p ~/.config/opencode/metrics/*": "allow",
      "sort": "allow",
      "grep": "allow",
      "head": "allow",
      "tail": "allow",
      "wc": "allow",
      "cut": "allow",
      "sed": "allow",
      "awk": "allow",
      "tr": "allow",
      "uniq": "allow",
      "xargs": "allow",
      "echo": "allow",
      "eza": "allow",
      "date": "allow",
      "*": "ask"
    }
  },
  "instructions": []
}
